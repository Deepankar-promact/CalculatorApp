<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="calculator.promact.com.calculatorapp.MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/display"
        android:focusable="false"
        android:scrollHorizontally="true"
        android:text="0"
        android:textAlignment="viewEnd"
        android:maxLines="1"
        android:inputType="text"
        android:textSize="60sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/display"
        android:id="@+id/display_result"
        android:lines="1"
        android:text=""
        android:textAlignment="viewEnd"
        android:textSize="45sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@id/display_result"
                android:gravity="fill_vertical"
                android:id="@+id/right_area">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/key_seven"
                    android:text="7"
                    android:textSize="50sp"
                    android:onClick="keyPressed"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/key_eight"
                    android:layout_toRightOf="@+id/key_seven"
                    android:text="8"
                    android:textSize="50sp"
                    android:onClick="keyPressed"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/key_nine"
                    android:layout_toRightOf="@+id/key_eight"
                    android:text="9"
                    android:textSize="50sp"
                    android:onClick="keyPressed"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/key_four"
                    android:layout_below="@id/key_seven"
                    android:text="4"
                    android:textSize="50sp"
                    android:onClick="keyPressed"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/key_five"
                    android:layout_below="@+id/key_eight"
                    android:layout_toRightOf="@id/key_four"
                    android:text="5"
                    android:textSize="50sp"
                    android:onClick="keyPressed"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/key_six"
                    android:layout_toRightOf="@+id/key_five"
                    android:layout_below="@id/key_nine"
                    android:text="6"
                    android:textSize="50sp"
                    android:onClick="keyPressed"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/key_one"
                    android:layout_below="@id/key_four"
                    android:text="1"
                    android:textSize="50sp"
                    android:onClick="keyPressed"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/key_two"
                    android:layout_toRightOf="@+id/key_one"
                    android:layout_below="@id/key_five"
                    android:text="2"
                    android:textSize="50sp"
                    android:onClick="keyPressed"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/key_three"
                    android:layout_toRightOf="@+id/key_two"
                    android:layout_below="@id/key_six"
                    android:text="3"
                    android:textSize="50sp"
                    android:onClick="keyPressed"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/key_clear"
                    android:layout_below="@id/key_one"
                    android:text="C"
                    android:textSize="50sp"
                    android:onClick="keyPressed"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/key_zero"
                    android:layout_toRightOf="@+id/key_clear"
                    android:layout_below="@id/key_two"
                    android:text="0"
                    android:textSize="50sp"
                    android:onClick="keyPressed"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/key_equal"
                    android:layout_toRightOf="@+id/key_zero"
                    android:layout_below="@id/key_three"
                    android:text="="
                    android:textSize="50sp"
                    android:onClick="keyPressed"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="2">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/key_plus"
                    android:layout_weight="1"
                    android:text="+"
                    android:textSize="50sp"
                    android:onClick="keyPressed"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/key_minus"
                    android:layout_weight="1"
                    android:text="-"
                    android:textSize="50sp"
                    android:onClick="keyPressed"/>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
